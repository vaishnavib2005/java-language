import java.util.Scanner;
 class Main {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int a[]=new int[n];
		for(int i=0;i<n;i++)
		{
			a[i]=sc.nextInt();
		}
		int sum=0;
		float avr=0.0f;
		for(int i=0;i<n;i++)
		{
			sum+=a[i];
		}
		System.out.println("The sum of array is: "+ sum);
		avr=sum/n;
		System.out.println("The average is: "+ avr);
		}
	}
